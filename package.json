{
	"name": "portfolio",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"check": "astro check",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint . --fix --cache --max-warnings 0 --cache-location node_modules/.cache/.eslintcache",
		"format": "prettier . -w -u -c --cache",
		"check:spelling": "cspell . --cache --cache-location node_modules/.cache/.cspellcache",
		"checks": "bun run check & bun run check:spelling && bun run lint && bun run format"
	},
	"dependencies": {
		"astro": "^5.12.0",
		"astro-icon": "^1.1.5",
		"dev": "^0.1.3",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@typescript-eslint/parser": "^8.37.0",
		"cspell": "^9.1.5",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"sharp": "^0.34.3",
		"typescript-eslint": "^8.37.0"
	},
	"packageManager": "bun@1.2.18",
	"lint-staged": {
		"*": [
			"cspell --cache",
			"prettier -w -u -c --cache"
		],
		"*.{ts,tsx,astro}": [
			"eslint . --fix --cache --max-warnings 0"
		]
	}
}
